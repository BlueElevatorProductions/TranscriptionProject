{
  "name": "podcast-transcriber",
  "version": "0.1.0",
  "description": "A cross-platform podcast transcript editor with integrated audio editing capabilities",
  "main": "build/main/main/main.js",
  "homepage": "./",
  "author": "BlueElevatorProductions",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "echo 'ðŸš€ Use: npm run start-dev for concurrent development' && echo 'âš¡ Or run dev:vite and dev:electron in separate terminals'",
    "start-dev": "echo 'ðŸš€ Starting development servers...' && USE_LOCALHOST=true DEVTOOLS_ENABLED=true npm run dev:vite & sleep 3 && USE_LOCALHOST=true DEVTOOLS_ENABLED=true npm run dev:electron",
    "dev:vite": "vite --port 3000 --host",
    "dev:electron": "npm run build:main && electron . --max-old-space-size=4096",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.main.json",
    "start": "electron build/main/main.js",
    "clean": "rm -rf build dist node_modules",
    "clean:dev": "pkill -f vite || true",
    "postinstall": "echo 'Setup complete! Run npm run start-dev for development'",
    "dev:clean": "npm run clean:dev && npm run dev:vite",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && cd .. && npx playwright test"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.24.0",
