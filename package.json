{
  "name": "podcast-transcriber",
  "version": "0.1.0",
  "description": "A cross-platform podcast transcript editor with integrated audio editing capabilities",
  "main": "build/main/main/main.js",
  "homepage": "./",
  "author": "BlueElevatorProductions",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "echo 'ðŸš€ Use: npm run start-dev for concurrent development' && echo 'âš¡ Or run dev:vite and dev:electron in separate terminals'",
    "start-dev": "echo 'ðŸš€ Starting development servers...' && npm run dev:vite & sleep 3 && npm run dev:electron",
    "dev:vite": "vite --port 5174",
    "dev:electron": "npm run build:main && electron . --max-old-space-size=4096",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.main.json",
    "start": "electron build/main/main.js",
    "clean": "rm -rf build dist node_modules",
    "clean:dev": "pkill -f vite || true",
    "postinstall": "echo 'Setup complete! Run npm run start-dev for development'",
    "dev:clean": "npm run clean:dev && npm run dev:vite",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "electron-store": "^10.1.0",
    "form-data": "^4.0.4",
    "jszip": "^3.10.1",
    "mime-types": "^3.0.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.3.3",
    "electron": "^28.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.0",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "ts-jest": "^29.1.0"
  }
}
